<h1>Course data for course <%= course.title %></h1>

<table class="table">
  <tr>
    <th>Title</th>
    <td><%= course.title %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= course.description %></td>
  </tr>
  <tr>
    <th> Items </th>
    <td><%= course.items %></td>
  </tr>
  <tr>
    <th>Zip Code </th>
    <td><%= course.zipCode %></td>
  </tr>
</table>

<div>
  <a href="/courses" class="button">Show all courses</a>
</div>
<br>
<div>
  <a href="<%= `/courses/${course._id}/edit` %>"class="button">Edit course details</a>
</div>
<br>
<div>
  <a href="<%= `/courses/${course._id}/delete?_method=DELETE` %>" class="button" onclick="return corfirm('Are you sure?')">Delete course</a>
</div>
