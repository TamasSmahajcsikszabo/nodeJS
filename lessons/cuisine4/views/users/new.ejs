<div class="data-form">
  <form class="form-singin" action="/users/create" method="POST">
    <h2 style="font-size: 22px">Create a new user</h2>
    <label for="inputFirstName">First Name</label> <br>
    <input type="text" name="first" id="inputFirstName" placeholder="First" autofocus> <br>
    </br>
    <label for="inputLastName">Last Name</label> <br>
    <input type="text" name="last" id="inputLastName" placeholder="Last"> <br> 
    </br>
    <label for="inputPassWord">Password</label> <br>
    <input type="password" name="password" id="inputPassword" placeholder="Password" required> <br>
    </br>
    <label for="inputEmail">Email address</label> <br>
    <input type="email" name="email" id="inputEmail" placeholder="Email password" required> <br>
    </br>
    <label for="inputZipCode">Zip code</label> <br>
    <input type="text" name="zipCode" id="inputZipCode" pattern="\d*" placeholder="Zip Code" required> <br>
    </br>
    <button class="btn btn-primary btn-lg btn-block" style="background-color: #0080FF" type="submit" >Create</button>
  </form>
</div>
