<div class="container">
  <div class="col-sm-6">
    <h2>Change your subscriber profile</h2>
    <form action="<%= `/subscribers/${subscriber._id}/update?_method=PUT` %>" method="post">
        <label for="username">User name</label>
        <input type="text", name="username" value="<%= subscriber.username%>">
        <br>
        <label for="name">Name</label>
        <input type="text", name="name" value="<%= subscriber.name %>">
        <br>
        <label for="email">Email</label>
        <input type="text", name="email" value="<%= subscriber.email%>">
        <br>
        <label for="zipCode">Zip Code</label>
        <input type="text", name="zipCode" value="<%= subscriber.zipCode%>" pattern="[0-9]{4}">
        <br>
        <input type="submit", name="submit">
    </form>
    <p> We'll get back to you soon!</p>
  </div>
</div>
